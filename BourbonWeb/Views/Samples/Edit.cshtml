@model BourbonWeb.Models.Sample

@{
    ViewData["Title"] = "サンプルデータ編集";
}

<div class="card">
    <form asp-action="Edit">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Price" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-11">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" value="更新" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary float-end">戻る</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
